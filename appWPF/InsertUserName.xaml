<Window x:Class="appWPF.InsertUserName"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:appWPF"
        mc:Ignorable="d"
        Title="InsertUserName" Height="192" Width="304">
    <Grid Background="#F5F5F5">
        <Label FontSize="15" FontWeight="Black" Content="Insira seu nome: " HorizontalAlignment="Left" Margin="17,56,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.984,1.681"/>
        <TextBox BorderBrush= "Black" HorizontalAlignment="Left" Margin="160,66,0,0" TextWrapping="Wrap" Text="{Binding Nome}" VerticalAlignment="Top" Width="120"/>
        <Button Width="100" Height="30" FontWeight="DemiBold" BorderBrush="Black" Background="#3CB371"  Content="Confirmar" HorizontalAlignment="Left" Margin="17,113,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Button Width="100" Height="30" FontWeight="DemiBold" BorderBrush="Black" Background="#B22222" Content="Cancelar" HorizontalAlignment="Left" Margin="192,113,0,0" VerticalAlignment="Top" Click="Button_Click_1"/>

    </Grid>
</Window>
